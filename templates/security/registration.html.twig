{% extends 'base.html.twig' %}

{% block body %}
    <div class="container p-5 align-items-center">
        {{ form_start(form) }}
        {{ form_row(form.email, {'label': 'Adresse email', 'attr' : {'placeholder': 'Adresse email...'}}) }}
        <div class="row">
           <div class="col">{{ form_row(form.firstName, {'label': 'Prénom', 'attr' : {'placeholder': 'Prénom...'}}) }}</div>
            <div class="col">{{ form_row(form.lastName, {'label': 'Nom', 'attr' : {'placeholder': 'Nom...'}}) }}</div>
        </div>
        {{ form_row(form.phone, {'label': 'Numéro de téléphone', 'attr' : {'placeholder': 'Numéro de téléphone...'}}) }}
        {{ form_row(form.address, {'label': 'Adresse', 'attr' : {'placeholder': 'Adresse...'}}) }}
        {{ form_row(form.password, {'label': 'Mot de passe', 'attr' : {'placeholder': 'Mot de passe...'}}) }}
        {{ form_row(form.confirmPassword, {'label': 'Confirmation du mot de passe', 'attr' : {'placeholder': 'Confirmation du mot de passe...'}}) }}
        <div class="text-center pt-2"><button type="submit" id="button2" class="btn btn-info btn-lg">Inscription</button></div>
    </div>
    {{ form_end(form) }}

{% endblock %}